<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updatethongtincanhan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="410dp"
            android:layout_height="51dp"
            android:background="#F4F4F4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/frameq_lai">

            </Button>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:text="Thông tin cá nhân"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <Button
                android:id="@+id/buttonasave_ttcn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/save_tt"
                android:minHeight="41dp"
                android:text="Lưu"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:src="@drawable/user"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/rectangle_tt"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:fontFamily="@font/amita"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textSize="18dp"/>

            <EditText
                android:text="alow"
                android:id="@+id/edit_name"
                android:layout_width="393dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/search_bg"
                android:backgroundTint="#CCFBFFFF"
                android:drawablePadding="10dp"
                android:fontFamily="@font/amarante"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#0B0A0A"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/rectangle_tt"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:fontFamily="@font/amita"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textSize="18dp"/>

            <EditText
                android:text="0868723211"
                android:id="@+id/edit_mobi"
                android:layout_width="393dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/search_bg"
                android:backgroundTint="#CCFBFFFF"
                android:drawablePadding="10dp"
                android:fontFamily="@font/amarante"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#0B0A0A"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/rectangle_tt"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:fontFamily="@font/amita"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textSize="18dp"/>

            <EditText
                android:text="nam"
                android:id="@+id/edit_gt"
                android:layout_width="393dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/search_bg"
                android:backgroundTint="#CCFBFFFF"
                android:drawablePadding="10dp"
                android:fontFamily="@font/amarante"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#0B0A0A"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/rectangle_tt"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            >

            <TextView
                android:fontFamily="@font/amita"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18dp"/>

            <EditText
                android:text="pro@gmail.com"
                android:id="@+id/edit_email"
                android:layout_width="393dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/search_bg"
                android:backgroundTint="#CCFBFFFF"
                android:drawablePadding="10dp"
                android:fontFamily="@font/amarante"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#0B0A0A"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>